---
import Layout from '../layouts/Layout.astro';
import { LoginForm } from '../components/auth/LoginForm';
import { createSupabaseServer } from "@/lib/supabase-server";

export const prerender = false;

// Check if user is already logged in
const supabase = createSupabaseServer(Astro);
const { data: { session } } = await supabase.auth.getSession();

// If already authenticated, redirect to homepage
if (session) {
  return Astro.redirect('/');
}

// Set a flag to indicate we're on the login page
const isLoginPage = true;
---

<Layout title="Logowanie | AI Flashcard Generator" noAuthCheck={true}>
  <div class="max-w-md mx-auto py-12">
    <div class="text-center mb-6">
      <h1 class="text-2xl font-bold">Zaloguj się</h1>
      <p class="text-muted-foreground mt-2">
        Zaloguj się do swojego konta, aby kontynuować naukę
      </p>
    </div>

    <div class="bg-card rounded-lg border p-6 shadow-sm">
      <LoginForm client:load />
    </div>
  </div>
</Layout>
