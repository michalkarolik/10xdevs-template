---
import Layout from '../layouts/Layout.astro';
import { AUTH_TOKEN_COOKIE, getCookie } from '@/lib/cookies';
import { authenticationService } from '@/lib/server/authenticationService';

// Get user data using authenticationService instead of supabase-server
const token = getCookie(AUTH_TOKEN_COOKIE, Astro.request.headers.get('cookie') || '');
const user = token ? await authenticationService.getUserFromToken(token) : null;

const isAuthenticated = !!user;

// Example data
const featuresList = [
  {
    title: "Szybkie generowanie",
    description: "Automatycznie twórz fiszki w oparciu o podany tekst.",
  },
  {
    title: "Własne kolekcje",
    description: "Organizuj fiszki w tematyczne zestawy do nauki.",
  },
  {
    title: "Tryb nauki",
    description: "Efektywna nauka z wykorzystaniem algorytmów powtórek.",
  },
  {
    title: "Eksport do PDF",
    description: "Łatwo eksportuj swoje fiszki do formatu PDF.",
  },
];
---

<Layout title="AI Flashcard Generator" noAuthCheck={true}>
  <main>
    <!-- Hero section -->
    <section class="py-10 md:py-16">

    </section>

    <!-- Features section -->
    <section class="py-16 bg-muted/50">
      <div class="container">
        <h2 class="text-3xl font-bold text-center mb-12">Funkcje</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {featuresList.map(feature => (
            <div class="bg-card p-6 rounded-lg shadow-sm">
              <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
              <p class="text-muted-foreground">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- How it works section -->
    <section class="py-16">
      <div class="container">
        <h2 class="text-3xl font-bold text-center mb-12">Jak to działa</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary font-bold mb-4">1</div>
            <h3 class="text-xl font-semibold mb-2">Wklej tekst</h3>
            <p class="text-muted-foreground">Wklej fragment tekstu, który chcesz zamienić na fiszki</p>
          </div>
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary font-bold mb-4">2</div>
            <h3 class="text-xl font-semibold mb-2">Generuj fiszki</h3>
            <p class="text-muted-foreground">AI automatycznie tworzy pytania i odpowiedzi na ich podstawie</p>
          </div>
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary font-bold mb-4">3</div>
            <h3 class="text-xl font-semibold mb-2">Ucz się efektywniej</h3>
            <p class="text-muted-foreground">Organizuj, edytuj i ucz się z wygenerowanych fiszek</p>
          </div>
        </div>
      </div>
    </section>

  </main>
</Layout>

