---
import Layout from "@/layouts/Layout.astro";
import AIGenerationView from "@/components/views/AIGenerationView"; // Assuming React component

const { id } = Astro.params;

if (!id) {
  // Handle missing ID, maybe redirect or show error
  return Astro.redirect("/topics"); // Example redirect
}
---

<Layout title={`Generate Flashcards for Topic ${id}`}>
  {/* Added max-w-4xl for better readability on large screens, adjusted padding and margin */}
  <div class="container mx-auto max-w-4xl px-4 py-6 md:py-10">
    <h1 class="text-2xl md:text-3xl font-bold mb-6 text-center md:text-left">Generate Flashcards with AI</h1>
    <AIGenerationView client:load topicId={id} />
  </div>
</Layout>
