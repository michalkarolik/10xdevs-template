---
import "../styles/global.css";
import Breadcrumbs from "@/components/ui/Breadcrumbs.astro"; // Import the Breadcrumbs component

// Define the structure for a breadcrumb item
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  title?: string;
  breadcrumbs?: BreadcrumbItem[]; // Add breadcrumbs prop to the interface
}

// Set default title and default breadcrumbs to an empty array
const { title = "10x Astro Starter", breadcrumbs = [] } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  {/* Add base body styles */}
  <body class="min-h-screen bg-background font-sans antialiased">
    {/* Add a container for consistent padding and layout */}
    <div class="container mx-auto px-4 py-6">
      {/* Add a temporary border for debugging breadcrumbs rendering */}
      <div class="border border-dashed border-red-500 mb-4">
        <Breadcrumbs items={breadcrumbs} />
        {/* Display a debug message if no breadcrumbs are passed - REMOVED */}
      </div>
      {/* Render the page content */}
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
